<%# <div style="margin: 0 auto; width: 1600px"> %>
<h1>アニメ一覧 &サムネイル（facebook_og_image_url or image_thumbnailの比較検証）　<div style="text-align: right"><%= link_to "メニューへ戻る", admin_menu_path, class: "btn btn-outline-primary" %></div></h1>
<ul class="pagination pagination-sm">
    <li><%= link_to paginate @works %></li>
  </ul>
<table class="table table-striped table-bordered">
  <thead> 
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Image</th>
      <th scope="col">Title</th>
      <th scope="col">thum</th>
      <th scope="col">Year</th>
      <th scope="col">Tag_ids</th>
      <th scope="col">Show_View</th>
    </tr>
  </thead>
  <tbody>
    <% @works.each_with_index do |work, i| %>
      <tr>
        <td class="center"><%= work.id%></td>
        <td><%= image_tag work.facebook_og_image_url.blank? ? "no_image" : work.facebook_og_image_url.strip, size:"303x159", class: "img-thumbnail" %></td>
        <%# <td><%= image_tag work.image_thumbnail.blank? ? "no_image" : work.image_thumbnail.strip, size:"256x159", class: "img-thumbnail" %>
        <td><h5 class="card-title"><%= link_to "#{work.title}", work.wikipedia_url, target: :_blank %></h5></td>
        <% if work.facebook_og_image_url.blank? %>
          <td class="center" style="color: red"><%= "True" %></td>
        <% else %>
          <td class="center"><%= "False" %></td>
        <% end %>
        <td><%= work.season_year %><%= work.season_name_text.slice(-1) %></td>
        <td><%= @tag_ids[i] %></td>
        <td><strong><%= link_to "詳細", admin_post_path(work.id), class: "btn btn-primary" %></strong></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%# </div> %>