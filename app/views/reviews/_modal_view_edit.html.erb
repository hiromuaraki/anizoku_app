          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header" style="background-color: #EEEEEE; color: #000;">
                <h5 class="modal-title" id="exampleModalLabel"><i class="fas fa-pencil-alt"></i> レビュー編集</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
        
                <div style="color: #FFFFFF" class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <%# ここにセレクトボックス を配置する %>
                      <%= form_with url: review_path(id: current_user.id), method: :patch, remote: true do |f| %>
                      <%= hidden_field_tag :work_id, @work.id %>
                      <div class="row">
                        <div class="col-md-4">
                          <p style="color: #000"><i class="far fa-check-square"></i> 作画/世界観</p>
                          <%= f.select :rating_drawing, {"とても良い": "very_good","良い": "good","普通": "normal","良くない": "bad"},{selected: @review.review_conversion_selected[0]},{class: "btn btn-secondary"} %>
                        </div>
                          <div class="col-md-4">
                            <p style="color: #000"><i class="far fa-check-square"></i> 脚本/(STORY)</p>
                            <%= f.select :rating_story, {"とても良い": "very_good","良い": "good","普通": "normal","良くない": "bad"},{selected: @review.review_conversion_selected[1]}, {class: "btn btn-secondary"} %>
                          </div>
                          <div class="col-md-4">
                            <div class="form-group">
                              <p style="color: #000"><i class="far fa-check-square"></i> 演技</p>
                              <%= f.select :rating_actor, {"とても良い": "very_good","良い": "good","普通": "normal","良くない": "bad"},{selected: @review.review_conversion_selected[2]},{class: "btn btn-secondary"} %>
                            </div>
                          </div>
                        </div>
                        <%# 下の段 %>
                      <div class="row">
                        <div class="col-md-4">
                          <div class="form-group">
                            <p style="color: #000"><i class="far fa-check-square"></i> 劇伴/音響</p>
                            <%= f.select :rating_incidental_music, {"とても良い": "very_good","良い": "good","普通": "normal","良くない": "bad"},{selected: @review.review_conversion_selected[3]},{class: "btn btn-secondary"}  %>
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <p style="color: #000"><i class="far fa-check-square"></i> 演出</p>
                            <%= f.select :rating_directing, {"とても良い": "very_good","良い": "good","普通": "normal","良くない": "bad"},{selected: @review.review_conversion_selected[4]}, {class: "btn btn-secondary"} %>
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <p style="color: #000"><i class="far fa-check-square"></i> キャラクター</p>
                            <%= f.select :rating_characters, {"とても良い": "very_good","良い": "good","普通": "normal","良くない": "bad"},{selected: @review.review_conversion_selected[5]}, {class: "btn btn-secondary"} %>
                          </div>
                        </div>
                      </div>
                      <p></p>
                      <div style="color: #FFF"><%= f.text_area :content, value: @review.content.blank? ? "まだ感想がありません！！感想を書いてみよう〜" : @review.content, id: "textarea", class: "form-control kokuban", rows: "10", maxlength: "280", placeholder: "入力自由(楽しくコメントしよう！)" %></div>

                    </div>
                  </div>
                </div>

              </div>
            
              <div class="modal-footer" style="background-color: #EEEEEE;">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
                <span style="background-color: #F85B73; border-radius: 5px;">
                  <%= button_tag type: "submit", class: "btn edit-link" do %>
                    <i class="fas fa-edit"></i>更新する
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
        
        <%# 呼び出し元の締めタグ %>
        </div>