<% if @display_mode == "1" %>
<%# header %>
  jQuery('#display_mode').html("<%= escape_javascript(render ('shared/search')) %>");
  jQuery('.custom-control-label').html("オタク");
  jQuery('#display_mode').show();
<%# nav-bar menu %>
  jQuery('.display_mode-nav').html("<%= escape_javascript(render ('static_pages/nav-bar')) %>");
  jQuery('.display_mode-nav').show();
<% else  %>
<%# header %>
  jQuery('#display_mode').hide();
  jQuery('.custom-control-label').html("ノーマル");

<%# nav-bar menu %>
  jQuery('.display_mode-nav').html("<%= escape_javascript(render ('static_pages/nav-bar-normal')) %>");
  jQuery('.display_mode-nav').show();
<% end %>
