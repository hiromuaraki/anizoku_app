<% if @display_mode == "1" %>
<%# header %>
  $('#display_mode').html("<%= escape_javascript(render ('shared/search')) %>");
  $('.custom-control-label').html("オタク");
  $('#display_mode').show();
<%# nav-bar menu %>
  $('.display_mode-nav').html("<%= escape_javascript(render ('static_pages/nav-bar')) %>");
  $('.display_mode-nav').show();
<% else  %>
<%# header %>
  $('#display_mode').hide();
  $('.custom-control-label').html("ノーマル");

<%# nav-bar menu %>
  $('.display_mode-nav').html("<%= escape_javascript(render ('static_pages/nav-bar-normal')) %> ");
  $('.display_mode-nav').show();
<% end %>
