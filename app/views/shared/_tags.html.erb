<div class="row" style="margin-top: 50px">
  <div class="col-md-4">
    <h3><i class="fas fa-search"></i>タグから探す</h3>
  </div>
  <div class="col-md-4">
  </div>
  <div class="col-md-4" style="text-align: right">
  <%# もっとみるを押したらタグ一覧を表示する %>
    <h5><%= link_to "もっと見る", tags_tag_list_path %></h5>
  </div>
</div>
<div style="width: 930px">
  <div class="row">
    <% @tags.each_with_index do |tag, i| %>
      <div class="col-md-4">
        <span class="btn btn-secondary list-group">
          <%= tag.name %>（<%= @tag_group_count[i][1].size %>件）
        </span>
      </div>
    <% end %>
  </div>
</div>