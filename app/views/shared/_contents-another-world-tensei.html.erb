<div class="row">
  <div class="col-md-10">
    <h3 style="color: #FFFFFF"><i class="far fa-check-square"></i>【転生して人生をやり直す!?】〜異世界転生系〜</h3>
  </div>
  <%# <div class="col-md-2">
  </div> %>
  <div class="col-md-2" style="text-align: right">
    <h5><%= render partial: "shared/more-watch-modal-another-world", locals: {another_world_tensei: @another_world_tensei, watches_another_world: @watches_another_world} %></h5>
  </div>
</div>

<div class="swiper-container">
  <div class="swiper-wrapper">
    <% @another_world_tensei.each do |work| %>
      <% if !work.facebook_og_image_url.blank? %>
      <%# アニメ画像のリクエストURLがある時だけ %>
        <% if work.url_exist?(work.facebook_og_image_url) != "404" && work.url_exist?(work.facebook_og_image_url) != "500" %>
          <div class="swiper-slide">
            <%= link_to "/works/detail/#{work.id}", data:{"turbolinks"=>false} do %>
              <span class="cut" data-toggle="tooltip" data-placement="top" title=<%= work.title %>><%= image_tag work.facebook_og_image_url.blank? ? work.image_thumbnail : work.facebook_og_image_url  ,alt: "#{work.title}",class: "img-thumbnail", size: "303x159" %></span>
            <% end %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <%# <div class="swiper-pagination"></div> %>
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>

</div>