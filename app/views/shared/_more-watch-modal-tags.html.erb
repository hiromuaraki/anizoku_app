<button style="border-radius: 20px;" type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target=".bd-example-modal-xl-tags">もっと見る</button>

<div class="modal fade bd-example-modal-xl-tags" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content" style="background-color: #130B06;">
      <h1 style="color: #FFF; margin-bottom: 30px; margin-top: 20px; text-align: center;"><i class="fas fa-tag"></i> タグ一覧</h1>
      <div class="row" style="width: 1200px;">
        <% tags.each_with_index do |tag, i| %>
          <%= link_to "/tags/work_list/#{tag.id}",class: "edit-link" do %>
            <div class="badge rounded-pill bg-secondary" style="display: inline-block; margin: 10px; padding: 10px; margin-top: 10px; margin: 10px; font-size: 18px;">
              <%= tag.name %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>