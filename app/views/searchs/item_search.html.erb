                <div class="col-md-12">
                  <div class="card-group">
                    <div class="card">
                      <div class="card-body">
                        <h3 class="text-muted"><i class="fas fa-microphone-alt"> </i>
                          <%= link_to "/cast_works/#{cast.name}",data:{"turbolinks"=>false} do %>
